<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ForestActivity">

    <ImageView
        android:id="@+id/bear"
        android:layout_width="213dp"
        android:layout_height="0dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/owl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bear" />

    <ImageView
        android:id="@+id/owl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/wolf"
        app:layout_constraintEnd_toEndOf="@+id/bear"
        app:layout_constraintStart_toStartOf="@+id/wolf"
        app:layout_constraintTop_toBottomOf="@+id/bear"
        app:srcCompat="@drawable/owl" />

    <ImageView
        android:id="@+id/wolf"
        android:layout_width="186dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/red_panda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owl"
        app:srcCompat="@drawable/wolf" />

    <ImageView
        android:id="@+id/red_panda"
        android:layout_width="182dp"
        android:layout_height="0dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wolf"
        app:srcCompat="@drawable/redpanda" />
</androidx.constraintlayout.widget.ConstraintLayout>

