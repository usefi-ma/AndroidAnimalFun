<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/category"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFarm"
        android:layout_width="207dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:onClick="openFarm"
        android:text="@string/farmtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnOcean"
        android:layout_width="207dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:onClick="openOcean"
        android:text="@string/oceantext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFarm" />

    <Button
        android:id="@+id/btnForest"
        android:layout_width="202dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:onClick="openForest"
        android:text="@string/foresttext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOcean" />

    <Button
        android:id="@+id/btnJungle"
        android:layout_width="198dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:onClick="openJungle"
        android:text="@string/jungletext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnForest" />
</androidx.constraintlayout.widget.ConstraintLayout>